{
  "name": "expense-tracker-pwa",
  "version": "2.0.0",
  "description": "Progressive Web App para gestión de gastos e ingresos con sincronización en la nube",
  "main": "index.html",
  "scripts": {
    "start": "serve -s .",
    "dev": "serve -s . -l 3000",
    "build": "echo 'No build process required for vanilla JS'",
    "deploy": "firebase deploy",
    "test": "echo 'TODO: Add tests'",
    "capacitor:init": "cap init",
    "capacitor:add:android": "cap add android",
    "capacitor:sync": "cap sync",
    "capacitor:open:android": "cap open android",
    "android:build": "npm run capacitor:sync && npm run capacitor:open:android"
  },
  "keywords": [
    "expense-tracker",
    "pwa",
    "firebase",
    "firestore",
    "financial-management",
    "progressive-web-app"
  ],
  "author": "Tu Nombre",
  "license": "MIT",
  "devDependencies": {
    "@capacitor/android": "^5.0.0",
    "@capacitor/cli": "^5.0.0",
    "@capacitor/core": "^5.0.0",
    "firebase-tools": "^12.0.0",
    "serve": "^14.2.0"
  },
  "capacitor": {
    "appId": "com.tudominio.expensetracker",
    "appName": "Expense Tracker",
    "webDir": ".",
    "bundledWebRuntime": false,
    "android": {
      "minSdkVersion": 21,
      "targetSdkVersion": 33
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tu-usuario/expense-tracker.git"
  },
  "bugs": {
    "url": "https://github.com/tu-usuario/expense-tracker/issues"
  },
  "homepage": "https://tu-dominio.web.app"
} 